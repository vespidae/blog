<p id="notice"><%= notice %></p>

<h1><%= @post.name %></h1>

<p>
  <%= @post.context %>
</p>

<h2>Comments</h2>
<ul>
	<%= render @post.comments %>
</ul>

<h2>Add a comment:</h2>
<%= form_for([@post, @post.comments.build]) do |f| %>
	<div class="field">
		<%= f.label :commentor %><br />
		<%= f.text_field :commentor %>
	</div>
	<div class="field">
		<%= f.label :body %><br />
		<%= f.text_field :body %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
